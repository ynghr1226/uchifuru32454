<div class="items-sell-contents">
  <header class="items-sell-header">
    <%= link_to image_tag('logo.png' , size: '185x50'), "/" %>

  </header>
  <div class="items-sell-main">
    <%= form_with(model: @lesson, local: true) do |f| %>

    <%# エラーメッセージ%>
    <%= render 'shared/error_messages', model: f.object %>
    
    <%# 出品画像 %>
    <div class="img-upload">
      <div class="weight-bold-text">
        イベントアピール画像
        <span class="indispensable">必須</span>
      </div>
      <div class="click-upload">
        <%= f.file_field :image, id:"item-image" %>
      </div>
    </div>
    <%# /出品画像 %>
    <%# イベント詳細 %>
    <div class="new-items">
      <div class="weight-bold-text">
        イベント名
        <span class="indispensable">必須</span>
      </div>
      
      <%= f.text_area :name, class:"items-text", id:"item-name", placeholder:"イベントタイトル名（必須 100文字まで)", maxlength:"100" %>
      <div class="items-explain">
      <div class="weight-bold-text">
        開催日時
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_area :eventday, class:"items-text", id:"item-name", placeholder:"例）2021年07月30日(日)17:00〜20:00", maxlength:"100" %>
      </div>
      <div class="items-explain">
      <div class="weight-bold-text">
        締切日時
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_area :deadline, class:"items-text", id:"item-name", placeholder:"例）2021年07月23日(日)", maxlength:"100" %>
      </div>
      <div class="items-explain">
      <div class="items-explain">
        <div class="weight-bold-text">
          イベント概要説明
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_area :introduction, class:"items-text", id:"item-info", placeholder:"イベントのアピールポイントを書いてね！（必須 1,000文字まで）" ,rows:"7" ,maxlength:"1000" %>
        </div>
      </div>
      <div class="items-explain">
        <div class="weight-bold-text">
          お届け食材内容
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_area :delivery, class:"items-text", id:"item-info", placeholder:"お届け食材（必須 300文字まで）" ,rows:"7" ,maxlength:"300" %>
      </div>
       <div class="items-explain">
        <div class="weight-bold-text">
          ご用意いただくもの
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_area :bring, class:"items-text", id:"item-info", placeholder:"購入者様ご自身でご用意いただくものをご記入ください（必須 300文字まで）" ,rows:"7" ,maxlength:"300" %>
      </div>
       <div class="items-explain">
        <div class="weight-bold-text">
          当日の料理メニュー
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_area :recipe, class:"items-text", id:"item-info", placeholder:"当日の料理メニューを箇条きに書いたのちに、料理アピールをお願いします！（必須 1,000文字まで）" ,rows:"7" ,maxlength:"1000" %>
      </div>
       <div class="items-explain">
        <div class="weight-bold-text">
          当日の流れ
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_area :flow, class:"items-text", id:"item-info", placeholder:"当日の流れ（必須 2,000文字まで）" ,rows:"7" ,maxlength:"2000" %>
      </div>
    </div>
    <%# /イベント詳細 %>

    <%# イベント概要テーブル %>
   <div class="items-detail">
      <div class="weight-bold-text">商品の詳細</div>
      <div class="form">
        <div class="weight-bold-text">
          定員員数
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:capacity_id, Capacity.all, :id, :name, {}, {class:"select-box", id:"item-category"}) %>
        <div class="weight-bold-text">
          ふるさと地域
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:prefecture_id, Prefecture.all, :id, :name, {}, {class:"select-box", id:"item-sales-status"}) %>
      </div>
    </div>
    <%# 販売価格 %>
    <div class="sell-price">
      <div class="weight-bold-text question-text">
        <span>販売価格</span>
      </div>
      <div>
        <div class="price-content">
          <div class="price-text">
            <span>価格</span>
            <span class="indispensable">必須</span>
          </div>
          <span class="sell-yen">¥</span>
          <%= f.text_field :price, class:"price-input", id:"item-price", placeholder:"例）¥300〜9,999,999" %>
        </div>
        
    </div>
    <%# /販売価格 %>
    </div>
    
    <%# イベント概要テーブル %>

    

    

    <%# 注意書き %>
    <div class="caution">
      <p class="sentence">
        <a href="#">禁止されている出品、</a>
        <a href="#">行為</a>
        を必ずご確認ください。
      </p>
      <p class="sentence">
        またブランド品でシリアルナンバー等がある場合はご記載ください。
        <a href="#">偽ブランドの販売</a>
        は犯罪であり処罰される可能性があります。
      </p>
      <p class="sentence">
        また、出品をもちまして
        <a href="#">加盟店規約</a>
        に同意したことになります。
      </p>
    </div>
    <%# /注意書き %>
    <%# 下部ボタン %>
    <div class="sell-btn-contents">
      <%= f.submit "出品する" ,class:"sell-btn" %>
      <%=link_to 'もどる', root_path, class:"back-btn" %>
    </div>
    <%# /下部ボタン %>
  </div>
  <% end %>

  <%= render "shared/footer" %>
</div>